{
  "name": "@browseros/server-edition",
  "version": "0.0.1",
  "description": "BrowserOS Server Edition - headless server with task queue, LLM router, and learning system",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "start": "bun src/index.ts",
    "start:local": "bun src/index.ts --mode=local",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "test": "bun test tests/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@browseros/shared": "workspace:*",
    "@browseros/server": "workspace:*",
    "@browseros/learning": "workspace:*",
    "@browseros-ai/agent-sdk": "workspace:*",
    "hono": "^4.6.0",
    "better-sqlite3": "^11.6.0",
    "zod": "^3.24.2",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "1.3.5",
    "@types/node": "^24.3.3",
    "typescript": "^5.9.2"
  },
  "license": "AGPL-3.0-or-later"
}
